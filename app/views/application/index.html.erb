<!DOCTYPE html>
<html>
  <head>
    <title>Q&A API</title>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="#">Q&A API</a>
      </nav>

      <div class="container">
        <br>
        <div class="row ">
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body alert-primary">
                <h5 class="card-title">Users</h5>
                <p class="card-text">Amount of users: <%= @amount_users %> </p>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body alert-success">
                <h5 class="card-title">Questions</h5>
                <p class="card-text">Amount of Questions: <%= @amount_questions  %></p>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card">
              <div class="card-body alert-warning">
                <h5 class="card-title">Answers</h5>
                <p class="card-text">Amount of Answers: <%= @amount_answers  %></p>
              </div>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <h2>Tenants</h2>
          <div class="table-responsive">
            Total Tenants requests: <%= @tenants_requests_total %>
            <table class="table table-striped table-sm">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Full Name</th>
                  <th>Request Count</th>
                </tr>
              </thead>
              <tbody>
                <% @tenants.each do |tenant| %>
                  <tr>
                    <td><%= tenant.id %></td>
                    <td><%= tenant.full_name %></td>
                    <td><%= tenant.requests_amount %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>





  </body>
</html>
